@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()

<ul class="navbar-nav">
    <li class="nav-item">
        <a style="font-size:14px" class="nav-link" href="@Url.Action("Index", "Manage")" title="Manage">@User.Identity.GetUserName()</a>
    </li>

    <li class="nav-item">
        <a class="nav-link" href="javascript:document.getElementById('logoutForm').submit()">LogOut </a>
    </li>

</ul>
    }
}
else
{
<ul class="navbar-nav">
    <li class="nav-item">
        <a id="registerLink" class="nav-link" href="@Url.Action("Register", "Account")">Register</a>
    </li>
    <li class="nav-item">
        <a id="loginLink" class="nav-link" href="@Url.Action("Login", "Account")">Log in</a>
    </li>

</ul>
}
