@model FamsEcommerce.Context.Product

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Details</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        /* Add your custom CSS styles here */
        .center-content {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .custom-details {
            width: 400px;
            padding: 20px;
            background-color: #f7f7f7;
            border-radius: 5px;
        }

        .details-heading {
            text-align: center;
            margin-bottom: 20px;
        }

        .details-image {
            max-width: 100%;
            height: auto;
            border: 1px solid #ddd;
            border-radius: 5px;
        }
    </style>
</head>
<body>
    <div class="center-content">
        <div class="custom-details">
            <h4 class="details-heading">Product Details</h4>
            <hr />
            <dl class="dl-horizontal">
                <dt>@Html.DisplayNameFor(model => model.P_Description)</dt>
                <dd>@Html.DisplayFor(model => model.P_Description)</dd>

                <dt>@Html.DisplayNameFor(model => model.P_Price)</dt>
                <dd>@Html.DisplayFor(model => model.P_Price)</dd>

                <dt>@Html.DisplayNameFor(model => model.P_Quantity)</dt>
                <dd>@Html.DisplayFor(model => model.P_Quantity)</dd>

                <dt>@Html.DisplayNameFor(model => model.P_Disc_Price)</dt>
                <dd>@Html.DisplayFor(model => model.P_Disc_Price)</dd>

                <dt>@Html.DisplayNameFor(model => model.P_Image)</dt>
                <dd><img src="@Url.Content(Model.P_Image)" class="details-image" /></dd>

                <dt>@Html.DisplayNameFor(model => model.Catagory.Catagory_name)</dt>
                <dd>@Html.DisplayFor(model => model.Catagory.Catagory_name)</dd>
            </dl>

            <div class="text-center mt-3">
                <p>
                    @Html.ActionLink("Edit", "Edit", new { id = Model.P_Id }, new { @class = "btn btn-primary" })
                    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary ml-2" })
                </p>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
