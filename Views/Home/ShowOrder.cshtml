@model IEnumerable<FamsEcommerce.Context.Order>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <!-- Add Bootstrap CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <!-- Include FontAwesome CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <!-- Include DataTables CSS -->
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.css">
</head>
<body>
    <div class="container-fluid mt-4">
        <div class="row">
            <div class="col-md-3">
                <h1>Show Order</h1>
            </div>
           
        </div>

        <table id="myT" class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Phone</th>
                    <th>Address</th>
                    <th>Product Description</th>
                    <th>Quantity</th>
                    <th>Price</th>
                    <th>Product Image</th>
                    <th>Payment Status</th>
                    <th>Delivery Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Name)</td>
                        <td>@Html.DisplayFor(modelItem => item.Email)</td>
                        <td>@Html.DisplayFor(modelItem => item.Phone)</td>
                        <td>@Html.DisplayFor(modelItem => item.Address)</td>
                        <td>@Html.DisplayFor(modelItem => item.P_Desc)</td>
                        <td>@Html.DisplayFor(modelItem => item.P_Qty)</td>
                        <td>@Html.DisplayFor(modelItem => item.P_Price)</td>
                        <td><img src="@Url.Content(item.P_Img)" alt="Product Image" width="50" height="50" /></td>
                        <td>@Html.DisplayFor(modelItem => item.Payment_Status)</td>
                        <td>@Html.DisplayFor(modelItem => item.Delivery_Status)</td>

                        <td>

                            @Html.ActionLink("Delivered", "DeliverOrder", new { id = item.Id }, new { @class = "btn btn-info btn-sm" })



                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <a href="@Url.Action("Index","Home")" class="btn btn-secondary mt-3">
            <i class="fas fa-arrow-left mr-2"></i> Back
        </a>
    </div>

    <!-- Include jQuery and DataTables JavaScript -->
    <script src="https://code.jquery.com/jquery-3.7.0.min.js" integrity="sha256-2Pmvv0kuTBOenSvLm6bvfBSSHrUJ+3A7x6P5Ebd07/g=" crossorigin="anonymous"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.js"></script>

    <script>
        $(document).ready(function () {
            $('#myT').DataTable();
        });
    </script>
</body>
</html>